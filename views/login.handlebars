<div class="page_container">
  <section class="page_content" id="largecontainer">
    {{!-- Sign Up --}}
    <form class="form signup-form" id="login-new" >
      <h2>New visitor?</h2>
        <h4>Sign up to keep track of your very own collection and compare it to other users.</h4>

      <label for="name"><b>Name:</b></label>
        <input type="username" id='name-signup' placeholder="Enter Name" name="name" required>

      <br><label for="email"><b>Email:</b></label>
        <input type="email"  id='email-signup' placeholder="Enter Email" name="email" required>
      
      <br><label for="psw"><b>Password:</b></label>
        <input type="password"  id='password-signup' placeholder="Enter Password" name="psw" required>
      
      <br><label class="form-check-label"> Remember Me?</label>
        <input class="form-check-input" type="checkbox" checked="checked" name="remember" style="margin-left: 10px;">

      <br><p>By creating an account you agree to our <a href="#" style="text-decoration: underline">Terms of Service</a>.</p>
      
      <button class="btn btn-primary" type="submit">Sign Up</button>
    
    </form>

    {{!-- Sign In --}}
    <form class="form login-form" id="login-old" >
      <h2>Returning collector?</h2>
        <h4>Log in to make changes to your collection and view other collections at your leisure.</h4>

      <label for="email"><b>Email:</b></label>
         <input type="email" id="email-login" placeholder="Enter Email" name="email" required>
      
      <br><label for="psw"><b>Password:</b></label>
        <input type="password" id="password-login" placeholder="Enter Password" name="psw" required>
      
      <br><label class="form-check-label"> Remember Me?</label>
        <input class="form-check-input" type="checkbox" checked="checked" name="remember" style="margin-left: 10px;">
        
      <br><button class="btn btn-primary" type="submit">Sign In</button>
      
    </form>
  </section>
</div>

<script src="/js/login.js"></script>